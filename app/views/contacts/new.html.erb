<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h2>お問い合わせを作成する</h2>
    <%= form_for(@contact, url: confirm_contacts_path) do |f| %>
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
          <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :Eメール %>
      <%= f.text_field :email, class: 'form-control' %>
      <br>
      <%= f.label :内容 %>
      <%= f.text_field :content, class: 'form-control' %>
      <br>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= link_to "お問い合わせ一覧画面にもどる", contacts_path %>
  </div>
</div>